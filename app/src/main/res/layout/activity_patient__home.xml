<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/doc1"
    tools:context="com.example.rifat.hellodoctor.Patient_Home">

    <Button
        android:id="@+id/booking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimary"
        android:text="Book Appointment"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/showBookings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Show Bookings"
        android:textColor="@android:color/background_light"/>
    <Button
        android:id="@+id/healthtips"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Health Tips"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/symptoms"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Diseases Symptoms"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        />

</LinearLayout>
